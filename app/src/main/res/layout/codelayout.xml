<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="90dp"
    android:orientation="vertical"
    android:layout_margin="7dp"
    app:cardBackgroundColor="@android:color/holo_orange_light"
    app:cardCornerRadius="12dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CodeTitle"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="@color/cardview_dark_background"
            android:id="@+id/titlecodecard"/>
        <TextView
            android:layout_marginTop="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CodeType"
            android:textSize="18sp"
            android:textColor="@color/cardview_dark_background"
            android:id="@+id/typecodecard"/>

        <TextView
            android:layout_marginTop="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CodeLevel"
            android:textSize="18sp"
            android:textColor="@color/cardview_dark_background"
            android:id="@+id/levelcodecard"/>
        <TextView
            android:layout_marginTop="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CodeStatus"
            android:textSize="18sp"
            android:textColor="@color/cardview_dark_background"
            android:id="@+id/statuscodecard"/>
        <TextView
            android:layout_marginTop="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="18sp"
            android:textColor="@color/cardview_dark_background"
            android:id="@+id/datecodecard"/>


    </LinearLayout>


</android.support.v7.widget.CardView>